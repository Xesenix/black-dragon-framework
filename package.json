{
	"name": "black-dragon-framework",
	"version": "0.0.1",
	"description": "Game creation framework - state management, dependency injection, entity system, interchangeable view renderers. On top of webpack typescript",
	"main": "src/main.ts",
	"scripts": {
		"start": "npm run serve:dev",
		"analyze": "webpack-bundle-analyzer dist/stats.json",
		"lint": "tslint",
		"test": "karma start",
		"build:tsc": "tsc -p tsconfig.json",
		"build": "webpack --env.prod --progress",
		"build:test": "webpack --env.test --progress",
		"serve:dev": "webpack-dev-server --env.dev --progress --inline --hot"
	},
	"nyc": {
		"check-coverage": true,
		"per-file": true,
		"lines": 99,
		"statements": 99,
		"functions": 99,
		"branches": 99,
		"reporter": [
			"lcov",
			"text-summary"
		],
		"exclude": [
			"**/*.spec.js",
			"**/*.spec.jsx",
			"**/*.spec.ts",
			"**/*.spec.tsx"
		],
		"extension": [
			".js",
			".jsx",
			".ts",
			".tsx"
		],
		"include": [
			"src/**/*.js",
			"src/**/*.jsx",
			"src/**/*.ts",
			"src/**/*.tsx"
		],
		"cache": true,
		"all": true,
		"report-dir": "./coverage"
	},
	"dependencies": {
		"@types/redux-logger": "^3.0.5",
		"@types/webfontloader": "^1.6.29",
		"html-webpack-externals-plugin": "^3.6.0",
		"inversify": "^4.6.0",
		"karma-jasmine-html-reporter": "^0.2.2",
		"phaser-ce": "^2.9.3",
		"react": "^16.2.0",
		"react-dom": "^16.2.0",
		"redux": "^3.7.2",
		"redux-logger": "^3.0.6",
		"reflect-metadata": "^0.1.10",
		"rxjs": "^5.5.5",
		"webfontloader": "^1.6.28",
		"xes-rx-tween": "^0.1.0"
	},
